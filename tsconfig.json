{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "useUnknownInCatchVariables": false,
        "downlevelIteration": false,
        "target": "ES2020",
        "lib": ["ES2020"],
        "allowJs": true,
        "sourceMap": true,
        "incremental": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": "./",
        "outDir": "./dist"
    },
    "exclude": ["node_modules", "dist"]
}
